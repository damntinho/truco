<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Nomes dos jogadores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Nome J1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome J1:"
                android:textSize="20dp"/>

            <EditText
                android:inputType="textCapWords|textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insira o nome do jogador 1"
                android:textSize="20dp"
                android:id="@+id/et_nomeJ1"/>
        </LinearLayout>
        <!-- Nome J2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome J2:"
                android:textSize="20dp"/>

            <EditText
                android:inputType="textCapWords|textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insira o nome do jogador 2"
                android:textSize="20dp"
                android:id="@+id/et_nomeJ2"/>
        </LinearLayout>
        <!-- Botao iniciar -->
        <Button
            android:id="@+id/bt_iniciar"
            android:onClick="definirNomes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definir Nomes"
            android:textSize="20dp"/>
    </LinearLayout>
    <!-- Interface dos jogadores -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:text="Nome J1"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nomeJ1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--Aqui vao os image views-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_c1j1"
                        android:layout_width="150px"
                        android:layout_height="229px"
                        android:src="@drawable/costas"></ImageView>
                    <ImageView
                        android:id="@+id/iv_c2j1"
                        android:layout_width="150px"
                        android:layout_height="229px"
                        android:src="@drawable/costas"></ImageView>
                    <ImageView
                        android:id="@+id/iv_c3j1"
                        android:layout_width="150px"
                        android:layout_height="229px"
                        android:src="@drawable/costas"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:text="Nome J2"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nomeJ2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--Aqui vao os image views-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_c1j2"
                        android:layout_width="150px"
                        android:layout_height="229px"
                        android:src="@drawable/costas"></ImageView>
                    <ImageView
                        android:id="@+id/iv_c2j2"
                        android:layout_width="150px"
                        android:layout_height="229px"
                        android:src="@drawable/costas"></ImageView>
                    <ImageView
                        android:id="@+id/iv_c3j2"
                        android:layout_width="150px"
                        android:layout_height="229px"
                        android:src="@drawable/costas"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_mostraCartas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:onClick="sortear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sortear"></Button>
    </LinearLayout>

</LinearLayout>